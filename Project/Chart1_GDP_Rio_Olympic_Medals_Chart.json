{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Figure 1: GDP and Olympic medals",
        "subtitle": [
            "2016 GDP, PPP (constant 2017 international $). Source World Bank. Rio",
            "2016 Medals. Source scraped from Olympic Games Musuem."
        ],
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "subtitleColor": "#dbd8d8ec",
        "anchor": "start",
        "color": "white",
        "fontWeight": "bold"
    },
    "height": 300,
    "width": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/harryhoolahan/harryhoolahan.github.io/main/Project/Rio_data.csv"
    },
    "config": { "background": "#122b39" },
    "view": { "stroke": "transparent" },
    "layer": [{
            "mark": {
                "type": "point",
                "tooltip": { "content": "data" },
                "filled": true,
                "color": "#f4c245"
            },
            "encoding": {
                "x": {
                    "field": "2016 GDP (log)",
                    "title": "GDP, PPP (log scale)",
                    "type": "quantitative",
                    "axis": { "titleColor": "white", "grid": false, "labelColor": "white" },
                    "scale": { "domain": [7, 14] }
                },
                "y": {
                    "field": "Medal Points",
                    "title": "Olympic Medal Points",
                    "type": "quantitative",
                    "axis": { "titleColor": "white", "grid": false, "labelColor": "white" },
                    "scale": { "domain": [0, 260] }
                }
            }
        },
        {
            "mark": { "type": "line", "color": "red" },
            "transform": [
                { "regression": "Medal Points", "on": "2016 GDP (log)", "method": "quad" }
            ],
            "encoding": {
                "x": { "field": "2016 GDP (log)", "type": "quantitative" },
                "y": { "field": "Medal Points", "type": "quantitative" }
            }
        },
        {
            "transform": [{
                    "regression": "Medal Points",
                    "on": "2016 GDP (log)",
                    "params": true,
                    "method": "quad"
                },
                { "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2" }
            ],
            "mark": {
                "type": "text",
                "color": "white",
                "x": "width",
                "align": "right",
                "y": -5
            },
            "encoding": { "text": { "type": "nominal", "field": "R2" } }
        }
    ]
}