{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Figure 1: GDP and Olympic medals",
        "subtitle": [
            "2016 GDP, PPP (constant 2017 international $). Source World Bank. Rio",
            "2016 Medals. Source scraped from Olympic Games Musuem."
        ],
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "subtitleColor": "#dbd8d8ec",
        "anchor": "start",
        "color": "white",
        "fontWeight": "bold"
    },
    "height": 280,
    "width": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/harryhoolahan/harryhoolahan.github.io/main/Project/Rio_data.csv",
        "format": { "type": "csv" }
    },
    "params": [{
        "name": "filter_continent",
        "bind": {
            "input": "select",
            "options": [
                null,
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
            ],
            "labels": [
                "Show all",
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
            ],
            "name": "Continent"
        }
    }],
    "transform": [{
        "filter": "filter_continent == null || datum.Continent == filter_continent"
    }],
    "config": { "background": "#122b39" },
    "view": { "stroke": "transparent" },
    "layer": [{
        "mark": {
            "type": "point",
            "tooltip": { "content": "data" },
            "filled": true,
            "color": "#f4c245"
        },
        "encoding": {
            "x": {
                "field": "2016 GDP (log)",
                "title": "GDP, PPP (log scale)",
                "type": "quantitative",
                "axis": { "titleColor": "white", "grid": false, "labelColor": "white" },
                "scale": { "domain": [7.4, 14] }
            },
            "y": {
                "field": "Medal Points",
                "title": "Olympic Medal Points",
                "type": "quantitative",
                "axis": { "titleColor": "white", "grid": false, "labelColor": "white" },
                "scale": { "type": "linear" }
            }
        }
    }]
}